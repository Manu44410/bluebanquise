#!ipxe

echo |
echo | Entering equipment_profiles/{{ item | replace('equipment_','') | trim }}.ipxe file.
echo |
echo | Getting equipment_profile group variables...
echo |

# Ansible variables
set eq-equipment-profile {{ item | replace('equipment_','') | trim }}
set eq-architecture ${arch}
set eq-distribution {{ hostvars[groups[item][0]]['ep_operating_system']['distribution'] | default(pxe_stack_ep_operating_system.distribution) | lower }}
set eq-distribution-major-version {{ hostvars[groups[item][0]]['ep_operating_system']['distribution_major_version'] | default(pxe_stack_ep_operating_system.distribution_major_version) }}
set eq-distribution-version {{ hostvars[groups[item][0]]['ep_operating_system']['distribution_version'] | default(hostvars[groups[item][0]]['ep_operating_system']['distribution_major_version']) | default(pxe_stack_ep_operating_system.distribution_version) | default(pxe_stack_ep_operating_system.distribution_major_version) }}
set eq-console {{ hostvars[groups[item][0]]['ep_console'] | default(pxe_stack_ep_console) }}
set eq-kernel-parameters {{ hostvars[groups[item][0]]['ep_kernel_parameters'] | default(pxe_stack_ep_kernel_parameters) }}
set eq-repositories-environment {{ hostvars[groups[item][0]]['ep_operating_system']['repositories_environment'] | default(pxe_stack_ep_operating_system.repositories_environment) | default('') }}

# Dynamic variables
set images-root http://${next-server}/repositories/${eq-repositories-environment}/${eq-distribution}/${eq-distribution-version}/${eq-architecture}/
set repository-root http://${next-server}/repositories/${eq-repositories-environment}/${eq-distribution}/${eq-distribution-version}/${eq-architecture}/
set kickstart-path http://${next-server}/pxe/equipment_profiles//${eq-equipment-profile}.kickstart.cfg

echo | images-root: ${images-root}
echo | repository-root: ${repository-root}
echo | kickstart-path: ${kickstart-path}
echo |

# Now chain to menu
echo | Now chaining to --> menu.ipxe
sleep 2
chain http://${next-server}/pxe/menu.ipxe || shell
